@model GestionHospital.Models.DiagnosticoPaciente

@{
    ViewData["Title"] = "Crear";
    Layout = "~/Views/Shared/_LayoutHospital.cshtml";
}

<h1>Agregar Diagnóstico</h1>

<h4>Diagnóstico de Paciente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Diagnostico" class="control-label"></label>
                <input asp-for="Diagnostico" class="form-control" />
                <span asp-validation-for="Diagnostico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Paciente" class="control-label"></label>
                <select asp-for="PacienteId" class ="form-control" asp-items="ViewBag.Paciente"></select>
            </div>
            <div class="form-group">
                <label asp-for="Medico" class="control-label"></label>
                <select asp-for="MedicoId" class ="form-control" asp-items="ViewBag.Medico"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
