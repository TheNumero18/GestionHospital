@model GestionHospital.Models.DTOs.DiagnosticoPacienteDTO

@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_LayoutHospital.cshtml";
}

<h1>Eliminar Diagnóstico</h1>

<h3>¿Está seguro que desea eliminar este diagnóstico?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Diagnostico)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Diagnostico)
        </dd>
        <dt class = "col-sm-2">
            Paciente@* @Html.DisplayNameFor(model => model.Paciente) *@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombrePaciente)
        </dd>
        <dt class = "col-sm-2">
            Médico@* @Html.DisplayNameFor(model => model.Medico) *@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreMedico)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver</a>
    </form>
</div>
