@model IEnumerable<GestionHospital.Models.DTOs.DiagnosticoPacienteDTO>

@{
    ViewData["Title"] = "Diagnósticos";
    Layout = "~/Views/Shared/_LayoutHospital.cshtml";
}

<h1>Diagnósticos</h1>

<p>
    <a asp-action="Create">Agregar Nuevo</a>
</p>

<form>
    <div style="display:grid">
        <div class="col-2">Paciente:</div>
        <div class="col-10"><input type="text" name="buscarPaciente" value="@ViewData["paciente"]" /></div>
    </div>
    <div style="display:grid">
        <div class="col-2">Médico:</div>
        <div class="col-10"><input type="text" name="buscarMedico" value="@ViewData["medico"]" /></div>
    </div>
    <div style="display:grid">
        <div class="col-2">Fecha:</div>
        <div class="col-10"><input type="date" name="buscarFecha" value="@ViewData["fecha"]" /></div>
    </div>
    <p style="margin-top:5px">
        <input type="submit" value="Buscar" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Diagnostico)
            </th>
            <th>
                Paciente@* @Html.DisplayNameFor(model => model.NombrePaciente) *@
            </th>
            <th>
                Médico@* @Html.DisplayNameFor(model => model.NombreMedico) *@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diagnostico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombrePaciente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreMedico)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Ver detalle</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
